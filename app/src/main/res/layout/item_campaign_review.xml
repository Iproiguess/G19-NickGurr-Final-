<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/ivItemCampaignImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Campaign Image" />

    <TextView
        android:id="@+id/tvItemCampaignTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Campaign Title"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivItemCampaignImage"
        app:layout_constraintTop_toTopOf="@id/ivItemCampaignImage" />

    <TextView
        android:id="@+id/tvItemCampaignDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Campaign description goes here. It might be a bit long and need to be truncated."
        android:textAppearance="?attr/textAppearanceListItemSecondary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvItemCampaignTitle"
        app:layout_constraintTop_toBottomOf="@id/tvItemCampaignTitle" />

    <TextView
        android:id="@+id/tvItemContactEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Email: N/A"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvItemCampaignDescription"
        app:layout_constraintTop_toBottomOf="@id/tvItemCampaignDescription" />


    <TextView
        android:id="@+id/tvItemDonationGoal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Goal: RM0.00"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvItemContactEmail"
        app:layout_constraintTop_toBottomOf="@id/tvItemContactEmail" />

    <TextView
        android:id="@+id/tvItemPaypalUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="PayPal: N/A"
        android:textSize="12sp"
        android:autoLink="web"
        android:textColorLink="@android:color/holo_blue_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvItemDonationGoal"
        app:layout_constraintTop_toBottomOf="@id/tvItemDonationGoal" />

    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvItemPaypalUrl"
        app:layout_constraintStart_toStartOf="@id/tvItemPaypalUrl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="end">

    <Button
        android:id="@+id/btnRejectCampaign"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reject"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/btnApproveCampaign"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Approve"
        android:textColor="@android:color/holo_green_dark" />
</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
